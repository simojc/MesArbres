<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Valeur aux frênes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @* @Html.ActionLink("Valeur aux frênes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Administration <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    @*<li>@Html.ActionLink("Profils Utilisateurs", "????", "Home")</li>*@
                                    <li>@Html.ActionLink("Utilisateurs", "Index", "UsersAdmin")</li>
                                    <li>@Html.ActionLink("Roles Utilisateurs", "Index", "RolesAdmin")</li>
                                    <li>@Html.ActionLink("Profils utilisateurs", "Index", "ProfilUtil")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Paramètres <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Domaines valeurs", "Index", "DomaineValeur")</li>
                                    <li>@Html.ActionLink("Codes valeurs", "Index", "Valeur")</li>
                                    <li>@Html.ActionLink("Localisations", "Index", "Localisation")</li>
                                    <li>@Html.ActionLink("Organisations", "Index", "Org")</li>
                                </ul>
                            </li>
                        }
                        @*<li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Activités <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Nouvelle demande", "Index", "Arbre")</li>
                                    <li>@Html.ActionLink("Voir les demandes", "Index", "EvalAbr")</li>

                                </ul>
                            </li>*@

                        <li>@Html.ActionLink("Nouvelle demande", "Index", "Home")</li>
                        <li>@Html.ActionLink("Mes demandes", "Index", "Home")</li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    }

    @*<div class="row">*@
        <div class="col-sm-2">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Sidebar menu</span>
                    </div>
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav">

                            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                            <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                            <li class="active"><a href="#">Menu Item 1</a></li>
                            <li><a href="#">Menu Item 2</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li class="dropdown-header">Nav header</li>
                                    <li><a href="#">Separated link</a></li>
                                    <li><a href="#">One more separated link</a></li>
                                </ul>
                            </li>
                            <li><a href="#">Menu Item 4</a></li>

                            <li><a href="#">Reviews <span class="badge">1,118</span></a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - IAER Solutionss, 2016, tous droits réservés</p>
            </footer>
        </div>

    @*</div>*@

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/jqueryubajx")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryunobval")
    @Scripts.Render("~/bundles/autrescripts")
    <script src="~/Scripts/autrescript.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
