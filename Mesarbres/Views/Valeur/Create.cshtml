@using Mesarbres.Helpers
@model Mesarbres.Models.val_dom
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<h2>Création d'un code valeur</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Créer un nouveau code valeur</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.code_dom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-3">
                @Html.DropDownListFor(model => model.code_dom, new SelectList(ViewBag.codedom), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.code_dom, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.NoEncodeActionLink("Nouveau Code Domaine", "Add", "Create", "DomaineValeur", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary " })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.code_val, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.code_val, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.code_val, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.val, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.val, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.val, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.descrip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descrip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descrip, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.actif)
                    @Html.LabelFor(model => model.actif)
                    @Html.ValidationMessageFor(model => model.actif, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div>
            <div align="left">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Retour", "Index", "Valeur", htmlAttributes: new { data_modal = "", @class = "btn btn-primary " })                
                </div>
            </div>
            <div align="right">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn  btn-primary" />
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}
